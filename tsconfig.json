{
    "compilerOptions": {
      "outDir": "./build/",
      "target": "ES6",
      "lib": ["es6", "dom"],
      "sourceMap": true,
      "jsx": "react-jsx",
      "module": "esnext",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "include": [
      "./src/**/*"
    ]
  }
  